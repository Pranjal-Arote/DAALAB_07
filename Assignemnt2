
#include <iostream>
using namespace std;

void ToEnd(int a[], int n)
{
	int count = 0; // Count of non-zero elements

	for (int i = 0; i < n; i++)
           {
		if (a[i] != 0)
                    {
	                arr[count++] = a[i];
                    }
            }
	while (count < n)
           {
		arr[count++] = 0;
           }
}

int main()
{
	int a[] = {1, 9, 8, 4, 0, 0, 2, 7, 0, 6, 0, 9};
	int n = sizeof(arr) / sizeof(a[0]);
	ToEnd(a, n);
	cout << "Array after pushing all zeros to end of array :";
	for (int i = 0; i < n; i++)
           {
		cout << a[i] << " ";
           }
	return 0;
}


------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------
#OUTPUT:

1 9 8 4 2 7 6 9 0 0 0 0 






